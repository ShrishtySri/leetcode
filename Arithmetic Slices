class Solution {
public:
    int numberOfArithmeticSlices(vector<int>& A) {
        int n=A.size(),sum=0;
        int dp[100001]={0};
        for(int i=1;i<n-1;i++){
            if(A[i]-A[i-1]==A[i+1]-A[i]){
                dp[i]=dp[i-1]+1;
                sum+=dp[i];
            }
        }
        return sum;
    }
};
